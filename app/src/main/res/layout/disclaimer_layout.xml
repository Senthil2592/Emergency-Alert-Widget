<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Prerequisite"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="1.Update the contact number and add Emergency alert widget in home screen"
        android:layout_below="@+id/text"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="2.GPS must be in ON state to fetch lat and long coordinates"
        android:layout_below="@+id/text1"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Disclaimer"
        android:layout_below="@+id/text2"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="1.Fetching GPS coordinates is entirely dependent upon the gps receiver in device and location"
        android:layout_below="@+id/text3"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="2.It would take few mins for GPS to initialize after turning on in device"
        android:layout_below="@+id/text4"
        />
    <TextView
        android:id="@+id/text6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="3.Standard rates will apply for SMS"
        android:layout_below="@+id/text5"
        />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=" Ok "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/text6"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>